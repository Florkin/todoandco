{% extends 'base.html.twig' %}

{% block header_img %}
	<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
	<a href="{{ path('task_new') }}" class="btn btn-info mt-2">Créer une tâche</a>
	<div class="row">
		{% for task in tasks %}
			<div class="col-12 col-sm-4 col-lg-4 col-md-4">
				<div class="thumbnail">
					<div class="caption">
						<h4 class="pull-right">
							{% if is_granted('TASK_EDIT', task) %}
								<a href="{{ path('task_toggle', {'id' : task.id }) }}">
									<span class="fa fa-{% if task.isDone %}check text-success{% else %}remove text-danger{% endif %}"></span>
								</a>
							{% else %}
								<span class="fa fa-{% if task.isDone %}check text-success{% else %}remove text-danger{% endif %}"></span>
							{% endif %}
						</h4>
						<h4>
							<a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
						</h4>
						<p>{{ task.content }}</p>
						<div class="small text-muted">
							{% if task.user is not null %}
								{{ task.user }}
							{% else %}
								Anonyme
							{% endif %}
						</div>
					</div>
					{% if is_granted('TASK_DELETE', task) %}
						<div>
							<form onsubmit="return confirm('Cette tâche sera supprimée. Continuer?')"
								  action="{{ path('task_delete', {'id' : task.id }) }}">
								<button class="btn btn-danger btn-sm pull-right">Supprimer</button>
							</form>
						</div>
					{% endif %}
				</div>
			</div>
		{% else %}
			<div class="col-12 my-2">
				<div class="d-inline-block alert alert-warning" role="alert">
					Il n'y a pas encore de tâche enregistrée.
					<a href="{{ path('task_new') }}" class="btn btn-warning">Créer une tâche</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
