<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	
	<title>{% block title %}To Do List app{% endblock %}</title>
	{{ encore_entry_link_tags('app') }}
	{% block stylesheets %}{% endblock %}
</head>
<body>
{% block navbar %}
	{% include 'navbar/navbar.html.twig' %}
{% endblock %}
<!-- Page Content -->
<div class="container">
	<div class="row py-2">
		<div class="col-12">
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{ path('user_new') }}" class="btn btn-primary">Créer un utilisateur</a>
			{% endif %}
			
			{% if app.user %}
				<a href="{{ path('app_logout') }}" class="float-right btn btn-danger">Se déconnecter</a>
			{% endif %}
			
			{% if not app.user and 'login' != app.request.attributes.get('_route') %}
				<a href="{{ path('app_login') }}" class="btn btn-success">Se connecter</a>
			{% endif %}
		</div>
	</div>
	
	<div class="row">
		<div class="col-12">
			{% for flash_message in app.session.flashBag.get('success') %}
				<div class="alert alert-success" role="alert">
					<strong>Superbe !</strong> {{ flash_message }}
				</div>
			{% endfor %}
			
			{% for flash_message in app.session.flashBag.get('error') %}
				<div class="alert alert-danger" role="alert">
					<strong>Oops !</strong> {{ flash_message }}
				</div>
			{% endfor %}
			
			{% block header_title %}{% endblock %}
			{% block header_img %}
				<img class="img-fluid" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">
			{% endblock %}
		</div>
	</div>
	
	<div class="row">
		<div class="col-12">
			{% block body %}{% endblock %}
		</div>
	</div>
</div>
<!-- /.container -->
<footer>
	<div class="container">
		<hr>
		<div class="row">
			<div class="col-lg-12">
				<p class="float-right">Copyright &copy; OpenClassrooms</p>
			</div>
		</div>
	</div>
</footer>
{{ encore_entry_script_tags('app') }}
{% block javascripts %}{% endblock %}
</body>
</html>
